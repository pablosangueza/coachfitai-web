@page "/plan"
@inject AppState State

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

      <h2 class="cf-h2 text-center mb-4">Your Plan</h2>

      @if (State.Plan is null)
      {
        <p class="text-center">No plan yet.</p>
      }
      else
      {
        <p><b>Summary:</b> @State.Plan.Summary</p>
        <p><b>Calories/day:</b> @State.Plan.CaloriesPerDay.Min–@State.Plan.CaloriesPerDay.Max</p>

        <h4 class="mt-4">Sessions</h4>
        <ul class="list-group">
          @foreach (var s in State.Plan.Sessions)
          {
            <li class="list-group-item">
              <b>@s.Day</b> — @s.Focus (@s.DurationMin min)
            </li>
          }
        </ul>
      }

    </div>
  </div>
</div>
